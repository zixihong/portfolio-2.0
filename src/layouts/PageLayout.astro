---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/fig.png" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;500&family=Rubik:wght@300;500&family=Manrope:wght@200;500&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <nav class="back-nav">
      <a href="/" class="back-button">‚Üê</a>
    </nav>
    <slot />
  </body>
</html>

<style is:global>
  .back-nav {
    padding: 1rem;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
  }
  
  .back-button {
    background: rgba(0, 0, 0, 0.5);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.2s ease;
  }
  
  .back-button:hover {
    background: rgba(0, 0, 0, 0.7);
  }
</style> 